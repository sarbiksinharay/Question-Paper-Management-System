    <meta charset="UTF-8">
    <title>Forgot Password</title>

    <style>
        *{
            font-family: "DM Sans", sans-serif;
            margin: 0;
            padding: 0;
        }
        body{
            background-color: olivedrab;

        }

        .main_div1{
            margin-top: 15%;
            border: 2px solid black;
            background-color: rgba(225,225,225,0.3);
            width: 350px;
            height: 250px;
            border-radius: 7px;
        }
        .lbl2{
            margin-right: 35%;
            font-size: 17px;

        }
        .lbl1{
            margin-right: 50%;
        }

        .inp{
            width: 250px;
            border-radius: 5px;
            height: 25px;
            border: none;

        }

        #submit_btn{
            width: 150px;
            height: 35px;
            font-size: 17px;
            border-radius: 7px;
            border:none;
            background-color: lightcoral;

            &:hover{
                background-color: maroon;
                transition: 0.3s ease;
                color: white;
            }
        }
    </style>

    <script>
        function validateEmail() {
            var email = document.getElementById('email').value;
            var pattern = /^[a-zA-Z0-9._%+-]+@stu\.adamasuniversity\.ac\.in$/;
            if (pattern.test(email)) {
                return true;
            } else {
                alert('Email is not valid! It should be in the format: user@stu.adamasuniversity.ac.in');
                return false;
            }
        }
    </script>
</head>
<body>
<center>

<div class="main_div1">
    <h2>Forgot Password</h2><br>
    <hr><br>
   <form action="/forgot_password" method=post  onsubmit="return validateEmail()">
       <label for="email" class="lbl1" >Email ID</label><br>
       <input type="email" id="email" class="inp" name="au_email"  required><br><br>
       <label for="psw"  class="lbl2" >Phone Number</label><br>
       <input type="text"  id="psw" name="ph_num"  class="inp" maxlength="10" required><br><br>
       <input type="submit"  value="SUBMIT"  id="submit_btn"  required>
   </form>
</div>
</center>

</body>
